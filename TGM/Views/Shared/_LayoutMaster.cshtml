<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TGM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TGM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Дом" asp-action="Privacy">Дом</a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Master" asp-controller="User" asp-action="Index">Пользователи</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Master" asp-controller="Game" asp-action="Index">Игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Торговая площадка" asp-action="Privacy">Торговая площадка</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Инструменты" asp-action="Index">Инструменты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Сообщество" asp-action="Privacy">Сообщество</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Календарь игр" asp-action="Privacy">Календарь игр</a>
                        </li>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profile-btn">
                                    <li><a class="dropdown-item" asp-area="" asp-action="Profile" asp-controller="Account">Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                     <li><a class="dropdown-item" asp-action="Index" asp-controller="Roles" asp-area="Admin">Manage roles</a></li>
                                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Groups" asp-area="Admin">Manage groups</a></li>
                                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Users" asp-area="Admin">Manage users</a></li>
                                            <li><a class="dropdown-item" asp-action="Index" asp-controller="UserProfiles" asp-area="Admin">Manage user profiles</a></li>
                                            <li><hr class="dropdown-divider"></li>
                       
                                    <li><a class="dropdown-item" asp-area="" asp-action="Logout" asp-controller="Account">Logout</a></li>
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
